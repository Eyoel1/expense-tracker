<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- 1. HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2E7D32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance_title"
                    android:textColor="#C8E6C9"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvTotalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 Br"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDateDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_msg"
                    android:textColor="#E8F5E9"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. MAIN ACTIONS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_expense"
                android:backgroundTint="#D32F2F"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnViewReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_receipt"
                android:backgroundTint="#1976D2"/>
        </LinearLayout>

        <!-- 3. VISUAL ANALYTICS -->
        <Button
            android:id="@+id/btnViewStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_graph"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"/>

        <!-- 4. EDIR MANAGER -->
        <Button
            android:id="@+id/btnEdir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_edir"
            android:backgroundTint="#673AB7"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"/>

        <!-- 5. PROFILE -->
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_profile"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#455A64"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>